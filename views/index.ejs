    });

    // Form submit olayÄ±nÄ± engelleme ve fetch iÅŸlemi baÅŸlatma
    form.addEventListener("submit", function(event) {
        event.preventDefault(); // Sayfa yenilenmesini engelle
        handleFormSubmit();
    });

    // Fetch iÅŸlemini baÅŸlatmak iÃ§in yardÄ±mcÄ± fonksiyon
    function handleFormSubmit() {
        // YÃ¼kleniyor overlay'ini gÃ¶ster
        loadingOverlay.classList.add('active');

        // Fetch isteÄŸiyle URL'yi gÃ¶nder
        fetch('/download', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ url: urlInput.value }) // URL'yi JSON formatÄ±nda gÃ¶nder
        })
        .then(response => response.json())
        .then(data => {
            // YÃ¼kleniyor overlay'ini gizle
            loadingOverlay.classList.remove('active');
            
            // Video bilgilerini gÃ¶ster
            document.getElementById('videoInfo').classList.add('active');
            
            // Videoyu yerleÅŸtir
            videolink.src = data.videoUrl;
            videotitle.innerHTML = data.videoDesc;
        })
        .catch(error => {
            console.error(error);
            loadingOverlay.classList.remove('active');
            alert("Hata: Video indirilemedi.");
        });
    }
        const video = document.getElementById('reel-video');

    let isPaused = true;
    document.getElementById('reelPlayPause').addEventListener('click', function() {
        isPaused = !isPaused;
        if (isPaused) {
            this.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="white"><polygon points="5,3 19,12 5,21" /></svg>';
            video.pause();
        } else {
            video.play();
